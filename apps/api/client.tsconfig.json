{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "rootDir": "./client",
        "baseUrl": "./client",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist/client",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "./client/*"
    ]
}